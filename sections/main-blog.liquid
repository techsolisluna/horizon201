

<script
  src="{{ 'blog-posts-list.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<blog-posts-list section-id="{{ section.id }}">
  <div class="section-background color-{{ section.settings.color_scheme }}"></div>
  <div
    class="
      section
      color-{{ section.settings.color_scheme }}
      blog-posts
      spacing-style
      size-style
    "
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    {% content_for 'blocks' %}

    {% comment %} === BARRA DE BUSCA === {% endcomment %}
    <div class="blog-search-wrapper">
      <input 
        type="text" 
        id="blog-search-{{ section.id }}" 
        class="blog-search-input" 
        placeholder="Buscar por título"
      >
    </div>

    {%- paginate blog.articles by 10000 -%}
      <span ref="viewMorePrevious"></span>
      
      <div
        ref="grid"
        class="blog-posts-container"
        data-last-page="{{ paginate.pages }}"
      >

        {% for article in blog.articles %}
          {% comment %} === ADICIONADO DATA-TITLE AQUI === {% endcomment %}
          <div
            class="blog-post-item"
            ref="cards[]"
            data-page="{{ paginate.current_page }}"
            data-title="{{ article.title | escape }}" 
          >
            {% content_for 'block', id: 'static-blog-post-card', type: '_blog-post-card', article: article %}
          </div>
        {% endfor %}

        {% comment %} === MENSAGEM DE SEM RESULTADOS === {% endcomment %}
        <div class="blog-no-results" id="blog-no-results-{{ section.id }}">
          A busca não retornou resultados
        </div>
      </div>
      <span ref="viewMoreNext"></span>
    {%- endpaginate -%}
  </div>
</blog-posts-list>

{% stylesheet %}
  /**
   * Blog posts page layout
   */
  .blog-posts {
    --page-content-width: var(--narrow-page-width);
    --page-width: calc(var(--page-content-width) + (var(--page-margin) * 2));
    --columns-gap: 36px;
    --rows-gap: 36px;
  }

  .blog-posts-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
    width: 100%;
    column-gap: var(--columns-gap);
    row-gap: var(--rows-gap);
  }

  /**
   * Apart from the first and second rows in the grid, all remaining blog posts
   * are arranged in a three-column layout:
   * +------------+------------+-------------+
   * |            |            |             |
   * |  (span 2)  |  (span 2)  |  (span 2)   |
   * |            |            |             |
   * +------------+------------+-------------+
   */
  .blog-post-item {
    --blog-post-card-scale: 0.6;

    grid-column: span 2;

    @media screen and (max-width: 749px) {
      --blog-post-card-scale: 0.5;

      grid-column: span 6;
    }
  }

  /**
   * The second row of blog posts has two columns:
   * +-------------------+-------------------+
   * |                   |                   |
   * |  (column span 3)  |  (column span 3)  |
   * |                   |                   |
   * +-------------------+-------------------+
   */
  .blog-post-item:nth-child(2),
  .blog-post-item:nth-child(3) {
    --blog-post-card-scale: 0.8;

    grid-column: span 3;

    @media screen and (max-width: 749px) {
      --blog-post-card-scale: 0.5;

      grid-column: span 6;
    }
  }

  /**
   * The first row of blog posts has only one column:
   * +---------------------------------------+
   * |                                       |
   * |           (1 column span 6)           |
   * |                                       |
   * +---------------------------------------+
   */
  .blog-post-item:first-child {
    --blog-post-card-scale: 1;

    grid-column: span 6;
  }

  /**
   * When there's no image, the blog post item has a border.
   */
  .blog-post-item {
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-20));
    padding: 0 1rem 1rem;
  }

  .blog-post-item:has(.blog-post-card__image-container) {
    border: none;
    padding: 0;
  }

  /* Estilos da Barra de Busca */
  .blog-search-wrapper {
    width: 100%;
    max-width: 600px;
    /*margin: 0 auto 40px auto;  Espaço abaixo da busca */
    margin: 0 0 40px;
    padding: 0;
  }

  .blog-search-input {
    width: 100%;
    padding: 12px 20px;
    font-size: 16px;
    border: 1px solid rgb(var(--color-foreground-rgb) / 0.2);
    border-radius: 8px; /* Ou use o padrão do seu tema */
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
  }

  .blog-search-input:focus {
    outline: 2px solid rgb(var(--color-foreground));
    outline-offset: 2px;
  }

  /* Estilos da Mensagem Sem Resultados */
  .blog-no-results {
    display: none; /* Escondido por padrão */
    grid-column: 1 / -1; /* Ocupa toda a largura do grid */
    text-align: center;
    padding: 60px 20px;
    font-size: 18px;
    color: rgb(var(--color-foreground-rgb) / 0.7);
  }

  .blog-no-results.is-visible {
    display: block;
  }

  /* Classe utilitária para esconder itens */
  .blog-post-item.is-hidden {
    display: none !important;
  }

  @media screen and (min-width: 750px) {
    
    /* 1. Força o tamanho do grid a ser igual para todos (3 colunas) */
    .blog-posts-container.is-searching .blog-post-item,
    .blog-posts-container.is-searching .blog-post-item:first-child,
    .blog-posts-container.is-searching .blog-post-item:nth-child(2),
    .blog-posts-container.is-searching .blog-post-item:nth-child(3) {
      grid-column: span 2 !important; 
      --blog-post-card-scale: 0.6 !important;
    }

    /*
       Força o card interno a empilhar a imagem e o texto (vertical),
       anulando o estilo horizontal do destaque.
    */
    .blog-posts-container.is-searching .blog-post-item:first-child .blog-post-card {
      flex-direction: column !important;
    }

    /* Garante que a imagem ocupe a largura total da nova coluna */
    .blog-posts-container.is-searching .blog-post-item:first-child .blog-post-card__content,
    .blog-posts-container.is-searching .blog-post-item:first-child .blog-post-card__image-container {
      padding-inline-start: 0 !important;
      width: 100% !important;
      flex: auto !important;
    }
  }
{% endstylesheet %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = '{{ section.id }}';
  const searchInput = document.getElementById(`blog-search-${sectionId}`);
  const noResultsMsg = document.getElementById(`blog-no-results-${sectionId}`);
  
  function normalizeText(text) {
    if (!text) return '';
    return text.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
  }

  if (searchInput) {
    searchInput.addEventListener('input', function(e) {
      const rawTerm = e.target.value; // Texto original para verificar se está vazio
      const searchTerm = normalizeText(rawTerm);
      
      const container = searchInput.closest('blog-posts-list').querySelector('.blog-posts-container');
      const cards = container.querySelectorAll('.blog-post-item');
      
      // === NOVA LÓGICA DE LAYOUT AQUI ===
      // Se tem texto digitado, ativa o modo de busca. Se vazio, desativa.
      if (rawTerm.length > 0) {
        container.classList.add('is-searching');
      } else {
        container.classList.remove('is-searching');
      }
      // ==================================

      let visibleCount = 0;

      cards.forEach(card => {
        const title = normalizeText(card.dataset.title);
        
        if (title.includes(searchTerm)) {
          card.classList.remove('is-hidden');
          visibleCount++;
        } else {
          card.classList.add('is-hidden');
        }
      });

      if (visibleCount === 0) {
        noResultsMsg.classList.add('is-visible');
      } else {
        noResultsMsg.classList.remove('is-visible');
      }
    });
  }
});
</script>

