{% doc %}
  @prompt
    Here's the improved, concise version:
    Create a flip page section that:
    
    Uses product metafield Amostra_heyzine_url as iframe src
    Only displays when metafield has value (hidden if empty)
    Uses this embed code:
    
    html<iframe allowfullscreen="allowfullscreen" allow="clipboard-write" scrolling="no" class="fp-iframe" style="border: 1px solid lightgray; width: 100%; height: 80vh;" src="{{product.metafields.custom.Amostra_heyzine_url}}"></iframe>

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-flip-page-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-flip-page-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-flip-page-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_margin }}px 0;
  }

  .ai-flip-page-iframe-wrapper-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_enabled | times: 1 | times: 0.1 }}rem {{ block.settings.shadow_enabled | times: 1 | times: 0.2 }}rem {{ block.settings.shadow_enabled | times: 1 | times: 0.5 }}rem rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-flip-page-iframe-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    width: 100%;
    height: {{ block.settings.iframe_height }}vh;
    border-radius: {{ block.settings.border_radius }}px;
    display: block;
  }

  @media screen and (max-width: 749px) {
    .ai-flip-page-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }
    
    .ai-flip-page-iframe-{{ ai_gen_id }} {
      height: {{ block.settings.iframe_height_mobile }}vh;
    }
    
    .ai-flip-page-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

{% if product.metafields.custom.Amostra_heyzine_url != blank %}
  <div class="ai-flip-page-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    <div class="ai-flip-page-container-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-flip-page-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      
      <div class="ai-flip-page-iframe-wrapper-{{ ai_gen_id }}">
        <iframe
          allowfullscreen="allowfullscreen"
          allow="clipboard-write"
          scrolling="no"
          class="ai-flip-page-iframe-{{ ai_gen_id }}"
          src="{{ product.metafields.custom.Amostra_heyzine_url }}"
          title="{{ block.settings.iframe_title | default: 'Product flip page preview' }}"
          loading="lazy"
        ></iframe>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
