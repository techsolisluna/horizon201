{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .authors-container-{{ ai_gen_id }} {
  {% if block.settings.container_width == 'full' %}
    width: 100%;
    padding: 0 {{ block.settings.container_padding }}px;
  {% else %}
    width: 100%; 

    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
  {% endif %}
}

  .authors-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    
    /*
      Força o grid a sempre ocupar 100% do container-pai.
      Isso impede que ele "encolha" ao filtrar.
    */
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .authors-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .author-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background_color }};
    transition: transform 0.3s ease;
    text-decoration: none;
  }

  {% if block.settings.hover_effect %}
  .author-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  {% endif %}
  
  {% if block.settings.image_grayscale_effect %}
  .author-card-{{ ai_gen_id }}:hover .author-image-{{ ai_gen_id }} {
    filter: grayscale(0%);
  }
  {% endif %}

  .author-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_size }}px;
    aspect-ratio: 1/1;
    margin-bottom: 15px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .author-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    {% if block.settings.image_grayscale_effect %}
    filter: grayscale(100%);
    transition: filter 0.3s ease;
    {% endif %}
  }

  .author-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .author-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .author-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_font_size }}px;
    font-weight: {{ block.settings.name_font_weight }};
    color: {{ block.settings.name_color }};
    margin: 0;
  }

  .section-description-{{ ai_gen_id }} {
    text-align: {{ block.settings.description_alignment }};
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin-bottom: 30px;
    line-height: 1.5;
  }

  .authors-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 20px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .author-filter-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 30px;
    flex-wrap: wrap;
    align-items: center;
  }

  .author-filter-button-{{ ai_gen_id }} {
    padding: 8px 16px;
    font-size: 15px;
    color: #333;
    background-color: #f4f4f4;
    border: 1px solid #ddd;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .author-filter-button-{{ ai_gen_id }}:hover {
    background-color: #e0e0e0;
  }

  .author-filter-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.heading_color | default: '#000000' }};
    color: {{ block.settings.card_background_color | default: '#ffffff' }};
    border-color: {{ block.settings.heading_color | default: '#000000' }};
  }

  .author-search-bar-{{ ai_gen_id }} {
    padding: 8px 16px;
    font-size: 15px;
    border: 1px solid #ddd;
    border-radius: 10px;
    margin-left: 10px; /* Espaço entre o último botão e a busca */
    flex-grow: 1; /* Permite que a barra cresça */
    max-width: 350px; /* Limita o tamanho máximo */
    line-height: 1.5;
  }
  
  /* Ajuste para mobile */
  @media screen and (max-width: 749px) {
    .author-search-bar-{{ ai_gen_id }} {
      margin-left: 0;
      width: 100%; /* Ocupa a largura toda */
      max-width: none;
      order: 4; /* Joga a barra de busca para baixo dos botões */
    }
  }

  .author-card-{{ ai_gen_id }}.is-hidden {
   display: none;
 }

 .author-no-results-{{ ai_gen_id }} {
    display: none; /* Escondido por padrão */
    padding: 40px 20px;
    text-align: center;
    font-size: 18px;
    color: {{ block.settings.description_color | default: '#666666' }};
    
    /* Chave para o layout: faz a mensagem ocupar todas as colunas */
    grid-column: 1 / -1;
  }

  /* Classe que o JS vai adicionar para mostrar a mensagem */
  .author-no-results-{{ ai_gen_id }}.is-visible {
    display: block;
  }
{% endstyle %}

<div class="authors-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="authors-heading-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h2>
  {% endif %}

  {% if block.settings.description != blank %}
    <div class="section-description-{{ ai_gen_id }}">
      {{ block.settings.description }}
    </div>
  {% endif %}

  <div class="author-filter-nav-{{ ai_gen_id }}">
    <button type="button" class="author-filter-button-{{ ai_gen_id }} active" data-filter="todos">Todos</button>
    <button type="button" class="author-filter-button-{{ ai_gen_id }}" data-filter="ilustrador">Ilustradores</button>

    <input type="text" class="author-search-bar-{{ ai_gen_id }}" placeholder="Buscar por nome">
  </div>

  <div class="authors-grid-{{ ai_gen_id }}">

    <div class="author-no-results-{{ ai_gen_id }}">
      A busca não retornou resultados
    </div>

    {% paginate metaobjects.autor.values by 1000 %}
      {% assign autores_ordenados = metaobjects.autor.values | sort: 'nome.value' %}
        {% for autor in autores_ordenados %}
          
          {% comment %} Lógica para definir o tipo de filtro {% endcomment %}
          {%- assign filter_key = "escritor" -%}
          {%- if autor.ilustrador.value == true -%}
            {%- assign filter_key = "ilustrador" -%}
          {%- endif -%}

          <a href="{{ autor.system.url }}" 
             class="author-card-{{ ai_gen_id }}" 
             data-filter-type="{{ filter_key }}">
            
            <div class="author-image-wrapper-{{ ai_gen_id }}">
            {% if autor.foto.value != blank %}
              <img 
                src="{{ autor.foto.value | image_url: width: 300 }}" 
                alt="{{ autor.nome.value }}" 
                loading="lazy"
                class="author-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="author-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <h3 class="author-name-{{ ai_gen_id }}">{{ autor.nome.value }}</h3>
        </a>
      {% else %}
        {% for i in (1..4) %}
          <div class="author-card-{{ ai_gen_id }}">
            <div class="author-image-wrapper-{{ ai_gen_id }}">
              <div class="author-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
            <h3 class="author-name-{{ ai_gen_id }}">Author Name</h3>
          </div>
        {% endfor %}
      {% endfor %}
    {% endpaginate %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const blockId = '{{ ai_gen_id }}';
  
  // Seleciona todos os elementos
  const filterButtons = document.querySelectorAll(`.author-filter-button-${blockId}`);
  const searchBar = document.querySelector(`.author-search-bar-${blockId}`);
  const authorCards = document.querySelectorAll(`.author-card-${blockId}`);
  
  // Seleciona a mensagem "sem resultados"
  const noResultsMessage = document.querySelector(`.author-no-results-${blockId}`);

  // Se não houver cards, não faz nada
  if (!authorCards.length) {
    return;
  }

  // Guarda o estado atual dos filtros
  let currentFilterType = 'todos';
  let currentSearchTerm = '';
  const hiddenClass = 'is-hidden';
  
  // Classe para a mensagem
  const noResultsClass = 'is-visible'; 

  // Função helper para "normalizar" texto
  function normalizeText(text) {
    if (!text) return '';
    return text
      .toLowerCase()
      .normalize("NFD")
      .replace(/[\u0300-\u036f]/g, "");
  }

  // Função principal que aplica AMBOS os filtros
  function applyFilters() {
    const normalizedSearchTerm = normalizeText(currentSearchTerm);
    
    // Contador de itens visíveis
    let visibleCount = 0;

    authorCards.forEach(card => {
      const cardType = card.dataset.filterType;
      const authorNameElement = card.querySelector(`.author-name-${blockId}`);
      const authorName = authorNameElement ? normalizeText(authorNameElement.textContent) : '';

      const typeMatch = (currentFilterType === 'todos' || currentFilterType === cardType);
      const searchMatch = (authorName.includes(normalizedSearchTerm));

      if (typeMatch && searchMatch) {
        card.classList.remove(hiddenClass);
        visibleCount++; // Incrementa o contador
      } else {
        card.classList.add(hiddenClass);
      }
    });

    // Bloco para mostrar/esconder a mensagem
    if (noResultsMessage) {
      if (visibleCount === 0) {
        noResultsMessage.classList.add(noResultsClass);
      } else {
        noResultsMessage.classList.remove(noResultsClass);
      }
    }
  }

  // Adiciona os "ouvintes" de evento

  // Ouvinte para os BOTÕES
  filterButtons.forEach(button => {
    button.addEventListener('click', function() {
      filterButtons.forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');
      currentFilterType = this.dataset.filter;
      applyFilters();
    });
  });

  // Ouvinte para a BARRA DE BUSCA
  if (searchBar) {
    searchBar.addEventListener('input', function() {
      currentSearchTerm = this.value;
      applyFilters();
    });
  }
});
</script>

